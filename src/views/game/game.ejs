<% title = "Shikaku Game" %>

<h1 class="text-3xl font-bold mb-5">Shikaku Game</h1>

<h2 class="text-2xl font-bold mb-5"><%= size %> X <%= size %></h2>

<!-- Canvas for the Game -->
<div class="relative border border-gray-800 p-2 inline-block">
  <canvas id="shikakuCanvas" data-board="<%= JSON.stringify(board) %>"></canvas>
</div>

<!-- Buttons -->
<div class="mt-5 space-x-3">
  <button
    id="reset"
    class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600"
  >
    Reset Selection
  </button>

  <button
    id="undo"
    class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600"
  >
    Undo
  </button>

  <button
    id="submit"
    class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
  >
    Submit
  </button>

  <button
    id="newPuzzle"
    class="bg-purple-500 text-white px-4 py-2 rounded hover:bg-purple-600"
  >
    New Puzzle
  </button>
</div>
